// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model StudentAssistant {
  id          Int          @id @default(autoincrement())
  name        String
  email       String       @unique
  schedules   Schedule[]
  attendances Attendance[]
}

model Schedule {
  id                 Int              @id @default(autoincrement())
  month              String
  year               Int
  studentAssistant   StudentAssistant @relation(fields: [studentAssistantId], references: [id])
  studentAssistantId Int
  attendances        Attendance[] // <-- add this line
  createdAt          DateTime         @default(now())
}

model Attendance {
  id                 Int              @id @default(autoincrement())
  date               DateTime
  status             String
  studentAssistant   StudentAssistant @relation(fields: [studentAssistantId], references: [id])
  studentAssistantId Int
  schedule           Schedule         @relation(fields: [scheduleId], references: [id])
  scheduleId         Int
  createdAt          DateTime         @default(now())
}
